---
const projects = [
  {
    title: "Connect",
    description: "A Peer-to-Peer Collaborative Learning Space fostering academic collaboration through real-time peer interaction. Features a reputation-based peer matching algorithm, improving the quality and relevance of interaction and engagement.",
    technologies: ["HTML", "CSS", "JavaScript", "React", "MongoDB", "Node.js"],
    image: "https://images.pexels.com/photos/3184327/pexels-photo-3184327.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=1",
    github: "https://github.com/araj7491/qconnect",
    demo: "#"
  },
  {
    title: "Coordinaid",
    description: "A Volunteer Management Platform for NGOs that provides a comprehensive solution for managing volunteer activities, recruitment, and coordination for NGOs and community organizations. Facilitates volunteer sign-ups, event management, and real-time communication.",
    technologies: ["Java", "Spring Boot", "Spring MVC", "ThymeLeaf", "JDBC"],
    image: "https://images.pexels.com/photos/6646918/pexels-photo-6646918.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=1",
    github: "#",
    demo: "#"
  },
  {
    title: "Portfolio Website",
    description: "A modern, responsive portfolio website with a blog system and contact form. Features clean design with animations, dark mode, and a fully functional blog system.",
    technologies: ["Astro", "React", "TailwindCSS", "JavaScript"],
    image: "https://images.pexels.com/photos/5474295/pexels-photo-5474295.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=1",
    github: "#",
    demo: "#"
  },
  {
    title: "E-Commerce Platform",
    description: "A full-featured e-commerce platform with product catalog, shopping cart, user authentication, and payment processing integration.",
    technologies: ["React", "Node.js", "Express", "MongoDB", "Stripe"],
    image: "https://images.pexels.com/photos/6169/woman-hand-desk-office.jpg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=1",
    github: "#",
    demo: "#"
  }
];
---

<section id="projects" class="section bg-white dark:bg-dark-900">
  <div class="container-custom">
    <div class="max-w-3xl mx-auto text-center mb-16 animate-on-scroll">
      <p class="text-primary-600 dark:text-primary-400 font-medium mb-2">My Work</p>
      <h2 class="section-title">Featured Projects</h2>
      <div class="w-20 h-1 bg-primary-600 dark:bg-primary-400 mx-auto"></div>
    </div>
    
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
      {projects.map((project, index) => (
        <div class="card group overflow-hidden animate-on-scroll h-full flex flex-col">
          <div class="relative overflow-hidden">
            <img 
              src={project.image} 
              alt={project.title} 
              class="w-full h-64 object-cover transition-transform duration-500 group-hover:scale-105"
            />
            <div class="absolute inset-0 bg-gradient-to-t from-dark-900/80 to-dark-900/0 flex items-end p-6">
              <h3 class="text-2xl font-bold text-white">{project.title}</h3>
            </div>
          </div>
          <div class="p-6 flex flex-col flex-grow">
            <p class="text-dark-600 dark:text-dark-300 mb-4 flex-grow">{project.description}</p>
            <div class="flex flex-wrap gap-2 mb-6">
              {project.technologies.map((tech) => (
                <span class="px-3 py-1 bg-primary-100 dark:bg-primary-900/30 text-primary-700 dark:text-primary-300 rounded-full text-sm">
                  {tech}
                </span>
              ))}
            </div>
            <div class="flex gap-4 mt-auto">
              <a href={project.github} target="_blank" rel="noopener noreferrer" class="btn-outline py-2 px-4">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
                </svg>
                GitHub
              </a>
              <a href={project.demo} target="_blank" rel="noopener noreferrer" class="btn-primary py-2 px-4">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z" />
                </svg>
                Live Demo
              </a>
            </div>
          </div>
        </div>
      ))}
    </div>
    
    <div class="text-center mt-12 animate-on-scroll">
      <a href="https://github.com/araj7491" target="_blank" rel="noopener noreferrer" class="btn-primary">
        View More Projects
        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 ml-2" viewBox="0 0 20 20" fill="currentColor">
          <path fill-rule="evenodd" d="M12.293 5.293a1 1 0 011.414 0l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-2.293-2.293a1 1 0 010-1.414z" clip-rule="evenodd" />
        </svg>
      </a>
    </div>
  </div>
</section>